---
const pageTitle = "صفحة الحساب";
---
<!DOCTYPE html>
<html lang="ar">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{pageTitle}</title>
  
  <script src="https://cdn.tailwindcss.com"></script>
  
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    .card {
      background: white;
      border-radius: 20px;
      box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
      border: 1px solid #e5e7eb;
    }
    .button {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      border-radius: 6px;
      font-size: 12px;
      font-weight: 500;
      transition: all 0.2s;
      cursor: pointer;
      text-decoration: none;
      border: none;
      padding: 8px 16px;
    }
    .btn-default {
      background-color: #f3f4f6;
      color: #1f2937;
    }
    .btn-default:hover {
      background-color: #e5e7eb;
    }
  </style>
</head>
<body class="bg-neutral-50 min-h-screen">
  <div class="flex min-h-screen items-center justify-center px-4 py-12">
    <div class="mx-auto w-full max-w-md space-y-6 text-center">
      <div id="logged-in-state" class="flex flex-1 items-center justify-center p-4">
        <div class="card w-full max-w-xs rounded-xl shadow-lg">
          <div class="card-header text-center space-y-1">
            <div class="form-wrapper">
              <h2 class="card-title">مرحباً بك، <span id="loggedInUserName"></span>!</h2>
              <p class="card-description">لقد قمت بتسجيل الدخول بنجاح.</p>
            </div>
          </div>
          <div class="card-content space-y-4">
            <div class="flex flex-col gap-2">
              <button id="homeButton" class="button btn-default btn-full-width">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="ml-2 h-4 w-4">
                  <path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
                  <polyline points="9 22 9 12 15 12 15 22"/>
                </svg>
                الرئيسية
              </button>
              <button id="logoutButton" class="button btn-default btn-full-width">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="ml-2 h-4 w-4">
                  <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"/>
                  <polyline points="17 16 22 12 17 8"/>
                  <line x1="22" x2="10" y1="12" y2="12" />
                </svg>
                تسجيل الخروج
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const isLoggedIn = localStorage.getItem('userLoggedIn') === 'true';

      if (isLoggedIn) {
        const userName = localStorage.getItem('userName');
        document.getElementById('loggedInUserName').textContent = userName;
      } else {
        // إذا لم يكن مسجلاً للدخول، يتم إعادة التوجيه إلى صفحة تسجيل الدخول
        window.location.href = '/login';
      }

      // معالج حدث لزر تسجيل الخروج
      document.getElementById('logoutButton').addEventListener('click', () => {
        localStorage.removeItem('userLoggedIn');
        localStorage.removeItem('userName');
        localStorage.removeItem('userEmail');
        localStorage.removeItem('userPicture');
        
        window.location.href = '/'; 
      });

      // معالج حدث لزر الرئيسية
      document.getElementById('homeButton').addEventListener('click', () => {
        window.location.href = '/';
      });
    });
  </script>
</body>
</html>
